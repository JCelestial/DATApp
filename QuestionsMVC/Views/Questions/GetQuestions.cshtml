@model IEnumerable<QuestionsDataAccess.Models.QuestionEntity>

@{
    ViewData["Title"] = "GetQuestions";
    Layout = "_Layout";
}



<table class="table">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.QuestionId)
            </th> *@
            <th>
                
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.CorrectAns)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Explanation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
